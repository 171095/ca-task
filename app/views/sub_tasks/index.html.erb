<%- model_class = SubTask -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:completion_date) %></th>
      <th><%= model_class.human_attribute_name(:task_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sub_tasks.each do |sub_task| %>
      <tr>
        <td><%= link_to sub_task.id, sub_task_path(sub_task) %></td>
        <td><%= sub_task.status %></td>
        <td><%= sub_task.title %></td>
        <td><%= sub_task.completion_date %></td>
        <td><%= sub_task.task_id %></td>
        <td><%=l sub_task.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      sub_task_path(sub_task), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sub_task_path(sub_task), :class => 'btn btn-warning btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sub_task_path(sub_task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sub_task_path,
            :class => 'btn btn-primary' %>
